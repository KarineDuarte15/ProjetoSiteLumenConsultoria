// tsconfig.node.json
{
  "compilerOptions": {
    "composite": true, // composite é importante quando há referências
    "skipLibCheck": true,
    "module": "CommonJS", // Mudar para CommonJS
    "moduleResolution": "node", // Usar node em vez de bundler com CommonJS
    "allowSyntheticDefaultImports": true, // Pode ajudar com import/require
    "strict": false, // Manter as configurações de linting flexíveis por enquanto
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
     "types": ["node"] // Adicionar explicitamente os tipos do node
  },
  "include": ["vite.config.ts", "tailwind.config.ts", "postcss.config.js"] // Garanta que tailwind.config.ts está incluído aqui!
}